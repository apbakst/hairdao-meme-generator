# Copy this file to .env and fill in your values
# NEVER commit .env to git!

OPENAI_API_KEY=your-openai-api-key
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-server-id

# Optional: specific channels to scan (comma-separated)
# Leave empty to scan all readable channels
DISCORD_CHANNEL_IDS=

# Trending data sources (all optional - will use fallbacks if not set)
# Twitter/X API - get from https://developer.twitter.com
TWITTER_BEARER_TOKEN=

# NewsAPI - get free key from https://newsapi.org (100 requests/day free)
NEWS_API_KEY=

# Reddit API - create app at https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
